<?xml version="1.0" encoding="UTF-8"?>
<!--
    WPS Claude 智能助手 - 加载项清单配置 (COM桥接版)
    MCP Server通过PowerShell COM接口直接操作WPS，无需HTTP服务
    @author 老王
-->
<manifest xmlns="http://schemas.wps.cn/oaassist/2019/manifest"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <id>wps-claude-addon</id>
    <version>1.1.0</version>
    <name>WPS Claude 智能助手</name>
    <description>通过自然语言操控 WPS Office，让你的办公变得更智能。使用 PowerShell COM 桥接，稳定可靠。</description>
    <author>WPS-Claude-Skills Team (老王出品)</author>

    <!-- 支持的WPS应用类型 -->
    <hosts>
        <host name="wps"/>
        <host name="et"/>
        <host name="wpp"/>
    </hosts>

    <!-- 权限声明 -->
    <permissions>
        <permission name="document.read"/>
        <permission name="document.write"/>
    </permissions>

    <!-- 功能区配置 -->
    <ribbon src="ribbon.xml"/>

    <!-- 脚本入口 - COM模式只需要main.js -->
    <scripts>
        <script src="js/main.js"/>
    </scripts>

</manifest>
